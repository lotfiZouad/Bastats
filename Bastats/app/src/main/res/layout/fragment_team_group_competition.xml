<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:id="@+id/previous_group_competition"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_prev"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/name_group_competition"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:hint="POULE X"/>

        <ImageButton
            android:id="@+id/next_group_competition"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_acton_next"/>

    </LinearLayout>

    <ListView
        android:id="@+id/teams_group_competition"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>