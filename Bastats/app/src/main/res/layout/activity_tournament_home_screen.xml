<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/grey"
    tools:context="com.enseirb.pfa.bastats.tournament.TournamentHomeScreen">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New tournament"
        android:id="@+id/button_create_tournament"
        android:layout_above="@+id/buttonResumeTournament"
        style="@style/button_orange"
        android:layout_alignRight="@+id/buttonResumeTournament"
        android:layout_alignEnd="@+id/buttonResumeTournament"
        android:layout_alignLeft="@+id/buttonResumeTournament"
        android:layout_alignStart="@+id/buttonResumeTournament" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Resume a tournament"
        android:id="@+id/buttonResumeTournament"
        style="@style/button_orange"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete a tournament"
        android:id="@+id/buttonDeleteTournament"
        android:layout_below="@+id/buttonResumeTournament"
        style="@style/button_orange"
        android:layout_alignRight="@+id/buttonResumeTournament"
        android:layout_alignEnd="@+id/buttonResumeTournament"
        android:layout_alignLeft="@+id/buttonResumeTournament"
        android:layout_alignStart="@+id/buttonResumeTournament" />
</RelativeLayout>
